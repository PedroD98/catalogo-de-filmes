<div>
  <% if flash[:notice] %>

    <div style="margin: 10px 0px">
      <%= flash[:notice] %>
    </div>

  <% end %>
</div>

<div>
  <%= form_with model: movie do | f | %>

    <div style="padding-bottom: 10px;">
      <%= f.label 'Título: '%>
      <%= f.text_field :name %>
    </div>
    
    <div style="padding-bottom: 10px;">
      <%= f.label 'País de origem: '%>
      <%= f.text_field :country_of_origin %>
    </div>
    
    <div style="padding-bottom: 10px;">
      <%= f.label 'Ano de lançamento: '%>
      <%= f.select :release_year, (1888..(Time.current.year + 3)).to_a.reverse %>
    </div>

    <div style="padding-bottom: 10px;">
      <%= f.label 'Duração: '%>
      <%= f.number_field :length %>
    </div>

    <div style="padding-bottom: 10px;">
      <%= f.label 'Gênero: '%>
      <%= f.collection_select :genre_id, Genre.all, :id, :name %>
    </div>

    <div style="padding-bottom: 10px;">
      <%= f.label 'Diretor: '%>
      <%= f.collection_select :director_id, Director.all, :id, :name %>
    </div>

    <div style="padding-bottom: 10px;">
      <%= f.label 'Status de lançamento: '%>
      <%= f.select :release_status, [['A ser lançado', :upcoming], ['Já lançado', :released]] %>
    </div>

    <div style="padding-bottom: 10px;">
      <%= f.label 'Pôster do filme: '%>
      <%= f.file_field :poster %>
    </div>

    <div style="padding-bottom: 10px;">
      <%= f.label 'Sinopse: '%>
      <%= f.text_area :synopse %>
    </div>

    <p><%= f.submit 'Cadastrar'%></p> 

  <% end %>
</div>
